    <link rel="stylesheet" href="/sighting-styles.css" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron&display=swap"
      rel="stylesheet"
    />
   
  </head>
  <body>
    <nav>
      <div class="container mw-100">
        <div class="row">
          <div class="col-4 d-flex justify-content-center col-nav">
            <a href="/" class="a-nav">Home</a>
          </div>
          <div class="col-4 d-flex justify-content-center col-nav">
            <a href="/sighting" class="a-nav">Report A Sighting</a>
          </div>
          <div class="col-4 d-flex justify-content-center col-nav">
            <a href="/shapes" class="a-nav"> Find Sighting By Shape</a>
          </div>
        </div>
      </div>
    </nav>
    <main>
      <h1 class="d-flex justify-content-center sighting-details-title">
        ðŸ›¸ SIGHTING DETAILS ðŸ›¸
      </h1>
      <div class="container d-flex justify-content-center container-sightings">
        <div
          class="
            row
            d-flex
            align-items-center
            flex-column
            row-sightings-details
          "
        >
          <div class="sighting-details">
            <span class="text-details">Sighting:</span></br>   <%= text %></br></br>
            <span class="text-details">Date & Time:</span></br> <%= date_time %></br></br>
            <span class="text-details">City:</span></br> <%= city %></br></br>
            <span class="text-details">State:</span></br> <%= state %></br></br>
            <span class="text-details">Shape:</span></br> <%= shape %></br></br>
            <span class="text-details">Duration:</span></br> <%= duration %></br></br>
            <span class="text-details">Summary:</span></br> <%= summary %></br></br>
          </div>
          <div class="row w-100 d-flex justify-content-around" >
            <div class="col-6 d-flex justify-content-center bottom-col">
              <a href="/sighting/<%= index %>/edit" class="edit-sighting"> Edit Sighting</a>
            </div>
            <div class="col-6 d-flex justify-content-center bottom-col">
              <form action="/sighting/<%= index %>/delete?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="button" />
          </form>
            </div>
          
          </div>
         
        </div>
      </div>
    </main>
    
  </body>
