<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron&display=swap"
      rel="stylesheet"
    />
    <style>
      .col-nav {
        background-color: grey;
        opacity: 80%;
      }
      main {
        margin-top: 50px;
      }

      .a-nav:visited,
      .a-nav:link {
        color: rgb(177, 255, 59);
        font-size: 25px;
        font-family: "Orbitron", sans-serif;
        padding: 10px;
      }

      body {
        background-image: url("https://i.stack.imgur.com/Mv83H.png");
      }

      @media screen and (min-width: 1440px) {
        .a-nav:visited,
        .a-nav:link {
          font-size: 22px;
        }
      }

      @media screen and (min-width: 1024px) and (max-width: 1339px) {
        .a-nav:visited,
        .a-nav:link {
          font-size: 20px;
        }
      }
      @media screen and (min-width: 768px) and (max-width: 1023px) {
        .a-nav:visited,
        .a-nav:link {
          font-size: 15px;
        }
      }
      @media screen and (min-width: 425px) and (max-width: 767px) {
        .a-nav:visited,
        .a-nav:link {
          font-size: 13px;
        }
      }
      @media screen and (min-width: 375px) and (max-width: 424px) {
        .a-nav:visited,
        .a-nav:link {
          font-size: 8px;
        }
      }
      @media screen and (min-width: 0px) and (max-width: 374px) {
        .a-nav:visited,
        .a-nav:link {
          font-size: 7px;
        }
      }
    </style>
  </head>
  <body>
    <nav>
      <div class="container mw-100">
        <div class="row">
          <div class="col-4 d-flex justify-content-center col-nav">
            <a href="/" class="a-nav">Home</a>
          </div>
          <div class="col-4 d-flex justify-content-center col-nav">
            <a href="/sighting" class="a-nav">Report A Sighting</a>
          </div>
          <div class="col-4 d-flex justify-content-center col-nav">
            <a href="/shapes" class="a-nav"> Find Sighting By Shape</a>
          </div>
        </div>
      </div>
    </nav>
    <main>
      <ol>
        <% shapesList.forEach((element, index) => { %>
        <a href="/shapes/<%= element %>"><li><%= element %></li></a>
        <% }); %>
      </ol>
    </main>
  </body>
</html>
